@using (Html.BeginForm("ChamarAlerta", "Alerta", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ActionLink("Retornar", "Index")
    </div>
    <div id="alinhar">
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <h1>Alerta de Rompimento de Barragem</h1>

            <div class="inner contact">
                <!-- Form Area -->
                <div class="contact-form" style=" margin:0 auto; text-align:center;align-content:center;align-self:center;">

                    <p>
                        <!-- Left Inputs -->
                        <div class="col-xs-6 wow animated slideInLeft" data-wow-delay=".5s">
                            <!-- Name -->
                            <input type="text" name="name" id="name" required="required" class="form" placeholder="Titulo do alerta" />
                            <textarea name="message" id="message" class="form textarea" required="required" placeholder="Mensagem Alerta"></textarea>
                        </div><!-- End Left Inputs -->
                        <!-- Right Inputs -->
                    </p>
                    <br />
                    <hr />
                    <p>

                    </p>
                    <!-- Bottom Submit -->
                    <!-- Clear -->
                    <div class="clear"></div>


                    <!-- Your Mail Message -->
                    <div class="mail-message-area">
                        <!-- Message -->
                        <div class="alert gray-bg mail-message not-visible-message">
                            <strong>Thank You !</strong> Your email has been delivered.
                        </div>
                    </div>

                </div><!-- End Contact Form Area -->
            </div><!-- End Inner -->


        </div>
    </div>
    <button id="error">Alertar!</button>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
