<body  class="hold-transition login-page">

    @Html.Partial("../Shared/_AlertaLogin")
    <div class="login-deseo">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>Deseo</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">
                Faça login para iniciar sua sessão
            </p>
            @using (Ajax.BeginForm("Login", "Login", FormMethod.Post,
new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST",
    UpdateTargetId = "container"

}))
            {


                <div style="  background-color: #F3E1D5; /* opacity: 0.6; */padding:2%; border-radius: 10px;">

                    <div class="form-group has-feedback">

                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login" } })

                        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">

                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @type = "password" } })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox"> Lembre-me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            <button type="submit" style="background-color:#FF2B33;" class="btn btn-primary btn-block btn-flat">Logar</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </div>
            }

            @*<div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                        <i class="fa fa-facebook"></i> Sign in using
                        Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                        <i class="fa fa-google-plus"></i> Sign in using
                        Google+
                    </a>
                </div>*@
            <!-- /.social-auth-links -->

            <a href="@Url.Action("Reiniciar", "Login")" style="color:#403F3B;font-weight:bold;" class="text-center">Esqueci a minha senha</a>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/AppBarragem.WEB.ADM/components/jquery/dist/jquery.min.js"></script>
