@model ZeNerd.DAL.Context.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="Tue, 01 Jan 2030 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AppBarragem.WEB.ADM  | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Scripts/AppBarragem.WEB.ADM/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/AppBarragem.WEB.ADM/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Scripts/AppBarragem.WEB.ADM/components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AppBarragem.WEB.ADM/css/AppBarragem.WEB.ADM.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Scripts/AppBarragem.WEB.ADM/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
    </style>
</head>
<body style=" background-image: url(../../Content/AppBarragem.WEB.ADM/img/background.jpg);width: 100%;height: max-content;background-color: #4C0C0C; background-repeat:no-repeat; background-size: cover; margin:0 auto;" class="hold-transition login-page">
    @Html.Partial("../Shared/_Alerta")
    <div class="login-box">
        <div class="login-logo">
           <a href="../../index2.html"><b>Admin</b>Deseo</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">
                Faça login para iniciar sua sessão
            </p>
            @using (Ajax.BeginForm("EnviarSenha", "Login", FormMethod.Post,
new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST",
    UpdateTargetId = "container"

}))
            {
              

            <div style="  background-color: #F3E1D5; /* opacity: 0.6; */padding:2%; border-radius: 10px;">

                <div class="form-group has-feedback">

                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "E-mail" } })

                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
             
                <div class="row">
              
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" style="background-color:#FF2B33;" class="btn btn-primary btn-block btn-flat">Enviar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
                }
      
  

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/AppBarragem.WEB.ADM/components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/AppBarragem.WEB.ADM/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/AppBarragem.WEB.ADM/plugins/iCheck/icheck.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
</body>
</html>
